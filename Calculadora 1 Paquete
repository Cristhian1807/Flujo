package com.mycompany.calculadora;
import java.util.Scanner;
public class Calculadora {
public static void main(String[] args) {
Scanner leer= new Scanner (System.in);
System.out.println("Ingrese el primer numero");
double numero1 = leer.nextDouble();
System.out.println("Ingrese el segundo numero");
double numero2= leer.nextDouble();

Operacion operaciones = new Operacion()
System.out.println(operaciones.suma(nuero1, nuero2));
System.out.println/operaciones.resta(nuero1, nuero2));
System.out.printin(operaciones.multiplicacion(numero1, nuero2));
System.out.println(operaciones.division(numero1, numero2));
}
}
